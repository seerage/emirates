include includes/bemto/bemto
include mixins/svg_import

doctype html
html(lang="ru")
	head
		meta(charset='utf-8')
		title Emirates Home
		link(rel='icon', href='images/favicon.png')
		meta(name='description', content='Стоматология доктора Латышевой')
		meta(name='viewport', content='width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no')
		link(rel='stylesheet', href='libs/bootstrap/css/bootstrap-reboot.min.css')
		link(rel='stylesheet', href='libs/bootstrap/css/bootstrap-grid.min.css')
		link(rel='stylesheet', type='text/css', href='css/main.css')
		script(src='js/main.js', defer)
	body
		header.header
			.container
				+b.header-flex-wrapper
					+e.A.item.__logo.img-responsive(href="#")
						img(src="images/logo.png", height="68", width="auto")
					+e.item
						+b.header-navigation
							ul
								li.has-children
									a(href="#") Купить
									ul
										li
											a(href="#") Очень длинное название для первого пункта подменю
										li
											a(href="#") Пункт №2
										li
											a(href="#") Пункт №3
								li 
									a(href="#") Новостройки
								li 
									a(href="#") Районы
								li 
									a(href="#") Застройщики
								li 
									a(href="#") О нас
								li 
									a(href="#") Контакты
					+e.item.__info
						+e.A.email(href="mailto:info@kpgroup-msk.ru") info@kpgroup-msk.ru
						+e.A.phone(href="tel:+7 958 502 02 20") +7 958 502 02 20
						+e.modal-call#popup-trigger Заказать звонок
					+e.item.__mobile-menu-call
						+svg(30,30, 'menu')
						span Меню
		.main-screen(style="background-image: url(images/main-screen-background.jpg)")
			.container 
				.row.justify-content-center
					.col-lg-10
						+b.offer-form
							+e.title Лучшие базы недвижимости в ОАЭ от компании 
								+e.SPAN.title_bold Emirates Home
							+b.FORM.form._3-in-1-row
								+e.SELECT(name="buy").select
									+e.OPTION.option(disabled, selected) Купить
									+e.OPTION.option Недвижимость
									+e.OPTION.option Дом
									+e.OPTION.option Участок
								+e.SELECT(name="type").select
									+e.OPTION.option(disabled, selected) Тип недвижимости
									+e.OPTION.option Тип № 1
									+e.OPTION.option Тип № 2
									+e.OPTION.option Тип № 3
								+e.SELECT(name="location").select
									+e.OPTION.option(disabled, selected) Локации
									+e.OPTION.option Локации № 1
									+e.OPTION.option Локации № 2
									+e.OPTION.option Локации № 3
								+e.SELECT(name="districts").select
									+e.OPTION.option(disabled, selected) Районы
									+e.OPTION.option Районы № 1
									+e.OPTION.option Районы № 2
									+e.OPTION.option Районы № 3
								+e.SELECT(name="price").select
									+e.OPTION.option(disabled, selected) Стоимость
									+e.OPTION.option Стоимость № 1
									+e.OPTION.option Стоимость № 2
									+e.OPTION.option Стоимость № 3
								+e.BUTTON.submit-button 
									span Показать стоимость
									+svg(23,23,'loup')
							+b.info-notice 
								+e.text 
									| Получить консультацию менеджера и 
									+e._accent подобрать лучшие варианты 
									| по Вашим запросам
								+e.IMG.__image 
									img(src="images/mobile.png", alt="")
